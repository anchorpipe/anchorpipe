{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2023", "DOM"],
    "types": ["node"],
    "allowJs": false,
    "strict": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@anchorpipe/*": ["libs/*/src"],
      "@apps/*": ["apps/*"],
      "redis": ["libs/redis/src/index.ts"]
    }
  },
  "exclude": ["apps/**", "node_modules", "dist", ".next"]
}
